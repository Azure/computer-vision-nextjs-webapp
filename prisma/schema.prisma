datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  email     String  @unique
  voteId    String?

  Vote Vote?
}

enum Animal {
  cat
  dog
}

model Vote {
  id           String @id @default(cuid())
  userId       String @unique
  animal       Animal
  blobImageUrl String

  user User @relation(fields: [userId], references: [id])
}
